
@{
    Layout = null;
    List<TCCB_QuanLy.Models.DAO.TruongNhiemVuThamGiaHDTD> truongNhiemVuThamGiaHDTDs = (List<TCCB_QuanLy.Models.DAO.TruongNhiemVuThamGiaHDTD>)ViewBag.TruongNhiemVuThamGiaHDTDs;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InDanhSachThamGiaHDTD</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        table {
            border-collapse: collapse;
        }

        table, th, td {
            border: 1.5px solid black;
        }
    </style>
</head>
<body>
    <div>
        <div class="panel panel-default">
            <div class="panel panel-body">
                <p class="text-center">
                    <button class="btn btn-primary" onclick="printDocuemntRegistration();">
                        <span class="glyphicon glyphicon-print"></span> IN HỒ SƠ
                    </button>
                </p>
                <div class="col-sm-10 col-sm-offset-1 document-print a4-style" id="printContent">
                    <div class="row">
                        <div class="col-sm-6 col-xs-6">
                            <h4 class="text-center">SỞ GIÁO DỤC VÀ ĐÀO TẠO</h4>
                            <h4 class="text-center">
                                THÀNH PHỐ HỒ CHÍ MINH
                            </h4>
                            <h4 class="text-center"><b>@ViewBag.School.TenTruong</b></h4>
                        </div>
                        <div class="col-sm-6 col-xs-6">
                            <h4 class="text-center">
                                <b>CỘNG HÒA XÃ HỘI CHỦ NGHĨA VIỆT NAM</b>
                            </h4>
                            <h4 class="text-center">
                                <b>Độc lập - Tự do - Hạnh phúc</b>
                            </h4>
                        </div>

                    </div>
                    <h4 class="text-center">
                        <b>
                            DANH SÁCH THAM GIA HỘI ĐỒNG XÉT TUYỂN VIÊN CHỨC, BAN GIÁM SÁT VÀ BAN KIỂM TRA SÁT HẠCH
                        </b>
                    </h4>
                    <table style="width: 100%; border: 1.5px solid; border-collapse: collapse;">
                        <thead>
                            <tr>
                                <td style="border: 1.5px solid">TT</td>
                                <td style="border: 1.5px solid">Họ tên</td>
                                <td style="border: 1.5px solid">
                                    Ngày tháng năm sinh
                                </td>
                                <td style="border: 1.5px solid">
                                    Giới tính
                                </td>
                                <td style="border: 1.5px solid">
                                    Chức vụ/Chức danh
                                </td>
                                <td style="border: 1.5px solid">
                                    Trình độ chuyên môn
                                </td>
                                <td style="border: 1.5px solid">
                                    Chuyên ngành đào tạo
                                </td>
                                <td style="border: 1.5px solid">
                                    Năm vào ngành
                                </td>
                                <td style="border: 1.5px solid">Ghi Chú</td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="border: 1.5px solid" colspan="9"><b>I. Tham gia Hội đồng tuyển dụng</b></td>
                            </tr>
                            <tr>
                                @{
                                    var indexI = 1;
                                    foreach (var item in truongNhiemVuThamGiaHDTDs.Where(s => s.NhiemVuId == 1))
                                    {


                                        <td style="border: 1.5px solid">@indexI</td>
                                        <td style="border: 1.5px solid">@item.HoTen</td>
                                        <td style="border: 1.5px solid">@item.NamSinh</td>

                                        if (item.GioiTinh)
                                        {
                                            <td style="border: 1.5px solid">Nam</td>
                                        }
                                        else
                                        {
                                            <td style="border: 1.5px solid">Nữ</td>
                                        }


                                        <td style="border: 1.5px solid">@item.ChucVu</td>
                                        <td style="border: 1.5px solid">@item.TrinhDoChuyenMon</td>
                                        <td style="border: 1.5px solid">@item.ChuyenNganhDaoTao</td>
                                        <td style="border: 1.5px solid">@item.NamVaoNganh</td>
                                        <td style="border: 1.5px solid"></td>
                                        indexI++;
                                    }
                                }
                            </tr>
                            <tr>
                                <td style="border: 1.5px solid" colspan="9"><b>II. Thành viên tham gia Ban giám sát</b></td>
                            </tr>
                            <tr>
                                @{
                                    var indexII = 1;
                                    foreach (var item in truongNhiemVuThamGiaHDTDs.Where(s => s.NhiemVuId == 2))
                                    {


                                        <td style="border: 1.5px solid">@indexII</td>
                                        <td style="border: 1.5px solid">@item.HoTen</td>
                                        <td style="border: 1.5px solid">@item.NamSinh</td>

                                        if (item.GioiTinh)
                                        {
                                            <td style="border: 1.5px solid">Nam</td>
                                        }
                                        else
                                        {
                                            <td style="border: 1.5px solid">Nữ</td>
                                        }


                                        <td style="border: 1.5px solid">@item.ChucVu</td>
                                        <td style="border: 1.5px solid">@item.TrinhDoChuyenMon</td>
                                        <td style="border: 1.5px solid">@item.ChuyenNganhDaoTao</td>
                                        <td style="border: 1.5px solid">@item.NamVaoNganh</td>
                                        <td style="border: 1.5px solid"></td>
                                        indexI++;
                                    }
                                }
                            </tr>
                            <tr>
                                <td colspan="9"><b>III. Thành viên tham gia Ban kiểm tra sát hạch</b></td>
                            </tr>
                            <tr>

                                @{
                                    var indexIII = 1;
                                    foreach (var item in truongNhiemVuThamGiaHDTDs.Where(s => s.NhiemVuId == 3))
                                    {


                                        <td style="border: 1.5px solid">@indexIII</td>
                                        <td style="border: 1.5px solid">@item.HoTen</td>
                                        <td style="border: 1.5px solid">@item.NamSinh</td>

                                        if (item.GioiTinh)
                                        {
                                            <td style="border: 1.5px solid">Nam</td>
                                        }
                                        else
                                        {
                                            <td style="border: 1.5px solid">Nữ</td>
                                        }


                                        <td style="border: 1.5px solid">@item.ChucVu</td>
                                        <td style="border: 1.5px solid">@item.TrinhDoChuyenMon</td>
                                        <td style="border: 1.5px solid">@item.ChuyenNganhDaoTao</td>
                                        <td style="border: 1.5px solid">@item.NamVaoNganh</td>
                                        <td style="border: 1.5px solid"></td>
                                        indexI++;
                                    }
                                }
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-sm-6 col-xs-6">

                        </div>
                        <div class="col-sm-6 col-xs-6">
                            <h4 class="text-center">
                                <i>Thành phố Hồ Chí Minh, ngày&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;tháng 07 năm 2020</i>
                            </h4>
                            <h4 class="text-center">
                                <b>THỦ TRƯỞNG</b>
                            </h4>
                            <h4 class="text-center">
                                <i>(Ký tên, ghi rõ họ tên và đóng dấu)</i>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function printDocuemntRegistration() {
            $('#printContent').printThis();
        }
    </script>
</body>
</html>
