@{
    ViewBag.Title = "Quản Lý Chung Tuyển Dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li>
            <a href="/tuyendung/quanlychung">
                Quản Lý Chung Tuyển Dụng
            </a>
        </li>
        <li class="active">Danh Sách Đăng Kí</li>
    </ol>
</div><!--/.row-->

<div class="panel panel-default">
    <div class="panel-heading">
        Danh sách đăng kí
        <span class="pull-right panel-toggle panel-button-tab-left"><em class="fa fa-download fa-xl color-orange"></em></span>
    </div>
    <div class="panel-body table-responsive">
        <table class="table table-condensed" id="danhsachdangki">
            <thead>
                <tr>
                    <th>Mã Đăng Kí</th>
                    <th>Họ Và Tên</th>
                    <th>Số CMND</th>
                    <th>Người cấp mã</th>
                    <th>Ngày cấp</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (var item in ViewBag.DanhSachDangKis)
                    {
                        <tr>
                            <td>@item.TienTo@item.Id</td>
                            <td>@item.LastName @item.FirstName</td>
                            <td>@item.IdentifyCard</td>
                            <td>@item.Account.LastName @item.Account.FirstName</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#danhsachdangki').DataTable();
    });
</script>

