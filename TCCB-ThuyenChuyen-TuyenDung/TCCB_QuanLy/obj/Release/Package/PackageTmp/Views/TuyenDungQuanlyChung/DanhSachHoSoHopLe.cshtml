@{
    ViewBag.Title = "Quản Lý Chung Tuyển Dụng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li>
            <a href="/tuyendung/quanlychung">
                Quản Lý Chung Tuyển Dụng
            </a>
        </li>
        <li class="active">Danh Sách Hồ Sơ Hợp Lệ</li>
    </ol>
</div><!--/.row-->

<div class="panel panel-default">
    <div class="panel-heading">
        Danh sách hồ sơ hợp lệ
        <a href="/tuyendung/downloadexceltuyendung/hople"><span class="pull-right panel-toggle panel-button-tab-left"><em class="fa fa-download fa-xl color-orange"></em></span></a>
    </div>
    <div class="panel-body table-responsive">
        <table class="table table-condensed" id="danhsachhople">
            <thead>
                <tr>
                    <th>Mã Đăng Kí</th>
                    <th>Mã Vòng 2</th>
                    <th>Họ Và Tên</th>                    
                    <th>Số CMND</th>
                    <th>Người ra xoát</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @{
        foreach (var item in ViewBag.DanhSachHopLe)
        {
                <tr>
                    <td>@item.RegistrationInterview.TienTo@item.RegistrationInterview.Id</td>
                    <td>@item.TienTo@item.MaVong2</td>
                    <td>@item.RegistrationInterview.LastName @item.RegistrationInterview.FirstName</td>

                    <td>@item.RegistrationInterview.IdentifyCard</td>
                    <td>@item.RegistrationInterview.Account1.LastName @item.RegistrationInterview.Account1.FirstName</td>
                    <td>
                        <button class="btn btn-primary btn-sm"><span class="fa fa-edit"> Chi tiết</span></button>
                    </td>
                </tr>
}
                }


            </tbody>
        </table>
    </div>
</div>


    <script>
        $(document).ready(function () {
            $('#danhsachhople').DataTable();
        });
</script>