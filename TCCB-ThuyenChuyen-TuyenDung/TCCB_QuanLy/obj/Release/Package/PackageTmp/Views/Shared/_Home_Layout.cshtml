<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Thuyên Chuyển, Tuyển Dụng SGD & ĐT Tp. Hồ chí Minh</title>
    <meta name="description" content="Thuyên chuyển, tuyển dụng Sở giáo dục và Đào tạo Tp. Hồ Chí Minh" />
    <meta name="og:title" property="og:title" content="Thuyên chuyển, tuyển dụng Sở giáo dục và Đào tạo Tp. Hồ Chí Minh">
    <link rel="shortcut icon" href="~/Content/images/logo_so.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 60px">
    <nav class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">CHUYỂN CÔNG TÁC, TUYỂN DỤNG VIÊN CHỨC</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="background-color: #da2a2a">
                <ul class="nav navbar-nav">
                    <li class="dropdown"><a href="/" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-home"></span></a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Tuyển dụng <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-messages">
                            <li><a href="/tuyendung/kiemtracmnd">Đăng kí/ cập nhật phiếu dự tuyển</a></li>
                            <li><a href="/tuyendung/trangthaidangky">Tình hình đăng ký</a></li>
                            <li><a href="/tuyendung/ketquatuyendung">Kết quả tuyển dụng</a></li>
                            <li class="divider"></li>
                            <li><a href="/schoollogin">Quản lý cấp trường</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle count-info" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                            Chuyển công tác <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu dropdown-alerts">
                            <li>@*<a href="/thuyenchuyen/option">Đăng kí mới</a>*@</li>
                            <li><a href="/thuyenchuyen/tiendogiaiquyethoso">Tiến độ giải quyết hồ sơ</a></li>
                            <li><a href="/thuyenChuyen/capnhat/kiemtrama">Cập nhật thông tin đã đăng kí</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="/thuyenchuyen/hosomauvaquytrinh">Mẫu hồ sơ</a></li>
                            <li><a href="#">Hướng dẫn</a></li>
                        </ul>
                    </li>
                </ul>
                
                <ul class="nav navbar-nav navbar-right">
                    <li style="margin: 8px 15px;"><a href="/loginsoption" role="button" class="btn btn-info"><span class="glyphicon glyphicon-log-in"></span>&nbsp; Đăng Nhập</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
    <div>

        @RenderBody()
    </div>


</body>
</html>